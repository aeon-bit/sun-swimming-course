    <androidx.cardview.widget.CardView
        android:id="@+id/cv_btnPerformBuatJadwal"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="46dp"
        android:clickable="true"
        android:elevation="12dp"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Buat Jadwal"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ly_warning"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="12dp"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/xmlbg_warning_diagnosa"
        android:padding="12dp"
        android:weightSum="100"
        app:layout_constraintTop_toBottomOf="@id/cv_btnPerformBuatJadwal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="14"
            android:src="@drawable/ic_warning"
            app:tint="@color/warining" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="80"
            android:fontFamily="@font/nunitto_semibold"

            android:textColor="@color/warining"
            android:textSize="12dp"
            app:layout_constraintTop_toBottomOf="@id/sv_2" />
    </LinearLayout>
