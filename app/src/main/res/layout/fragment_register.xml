            <EditText
                android:id="@+id/et_noHpRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Nomor Hp"
                android:textColorHint="@color/text_hint"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_namaKucingRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Nama Kucing"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_jenisKucingRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Jenis Kucing"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_usernameRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Username"
                android:inputType="text"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/et_emailRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/et_passwordRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Password"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text" />

            <EditText
                android:id="@+id/et_cPasswordRegisterForm"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_marginTop="14dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Confirm Password"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColor="@color/text"
                android:background="@drawable/xmlbg_input_outline"/>

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_btnPerformRegister"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="46dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_passwordLogin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:text="Daftar"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ly_txtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitto_semibold"
                    android:text="Sudah punya akun? "
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/tv_btnLoginNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Login sekarang"
                    android:textColor="@color/secondary" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

