<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/white"
    tools:context="ui.auth.RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textSize="28dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="58dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Daftar"
                android:textColor="@color/secondary" />


            <!--FORM-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Siswa"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_nameRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Nama"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Lahir"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_tglLahirRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="tahun-bulan-tanggal"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempat Lahir"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_tempatLahirRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Tempat Lahir"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Kelamin"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <RadioButton
                    android:id="@+id/rb_laki"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:buttonTint="@color/secondary"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Laki-laki"
                    android:fontFamily="@font/nunitto_semibold"
                    android:textColor="@color/text"
                    android:layout_marginLeft="4dp"/>
                <RadioButton
                    android:id="@+id/rb_perempuan"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:buttonTint="@color/secondary"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Perempuan"
                    android:fontFamily="@font/nunitto_semibold"
                    android:textColor="@color/text"
                    android:layout_marginLeft="4dp"/>
                <EditText
                    android:id="@+id/rb_errorMsg"
                    android:layout_width="0dp"
                    android:layout_height="0dp"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Orang Tua"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_namaOrtuRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Nama Orang Tua"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_alamatRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Alamat"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Hp"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_noHpRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Nomor Hp"
                android:textColorHint="@color/text_hint"
                android:inputType="phone"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Username"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_usernameRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Username"
                android:inputType="text"
                android:textColorHint="@color/text_hint"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text"
                android:textSize="14dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_passwordRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/xmlbg_input_outline"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Password"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:singleLine="true"
                android:textColor="@color/text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ulangi Password"
                android:fontFamily="@font/visvy_bold"
                android:textColor="@color/text"
                android:layout_marginTop="18dp"/>
            <EditText
                android:id="@+id/et_cPasswordRegisterForm"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="6dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunitto_semibold"
                android:hint="Confirm Password"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:paddingHorizontal="10dp"
                android:textColor="@color/text"
                android:background="@drawable/xmlbg_input_outline"/>

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_btnPerformRegister"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="46dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_passwordLogin">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="Daftar"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ly_txtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitto_semibold"
                    android:text="Sudah punya akun? "
                    android:textColor="@color/text" />

                <TextView
                    android:id="@+id/tv_btnLoginNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Login sekarang"
                    android:textColor="@color/secondary" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>



