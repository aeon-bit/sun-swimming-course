        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:weightSum="100"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="40"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:text="Jenis Kucing"
                    android:textColor="@color/secondary" />

                <Spinner
                    android:id="@+id/sp_jenisKucing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:background="@drawable/xmlbg_input_outline" />

            </LinearLayout>
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_baseline_arrow_drop_down_24"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/accent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary"
        app:layout_constraintTop_toBottomOf="@id/c1"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:layout_constraintTop_toBottomOf="@id/fl_1"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="24dp"
        android:layout_marginLeft="-36dp"
        android:layout_marginRight="180dp"
        app:cardBackgroundColor="@color/secondary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Gejala yang diderita"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/sv_3"
        android:layout_width="match_parent"
        android:layout_height="324dp"
        app:layout_constraintTop_toBottomOf="@id/cv_1"
        android:paddingVertical="24dp">

        <LinearLayout
            android:id="@+id/ly_cb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
