<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".ui.perkembangan.PerkembanganFragment">

    <TextView
        android:id="@+id/c0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/poppins_bold"
        android:paddingHorizontal="16dp"
        android:text="Perkembangan Siswa"
        android:textColor="@color/text"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/c0">

        <!--&lt;!&ndash;        nama&ndash;&gt;-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="Nama Siswa"
                android:textColor="@color/text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60">

                <Spinner
                    android:id="@+id/sp_namaPerkembangan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:background="@drawable/xmlbg_input_outline"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_sic_down_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:weightSum="100">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center_vertical"
                android:text="Latihan Ke-"
                android:textColor="@color/text" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60">

                <Spinner
                    android:id="@+id/sp_latihankePerkembangan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="60"
                    android:background="@drawable/xmlbg_input_outline"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppins_regular"
                    android:maxLines="1"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/text"
                    android:textSize="14dp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_sic_down_arrow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_btnTampilPerkembangan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:elevation="12dp"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/c1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="TAMPIL"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="32dp"
        android:orientation="vertical"
        android:weightSum="100"
        app:layout_constraintTop_toBottomOf="@id/cv_btnPerformRegister">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_weight="40"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center_vertical"
            android:text="Informasi Perkembangan"
            android:textColor="@color/text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="60">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_infoPerkembangan"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:background="@drawable/xmlbg_input_outline"
                    android:fontFamily="@font/poppins_regular"
                    android:padding="6dp"
                    android:text="@string/add_pull_git"
                    android:textColor="@color/text"
                    app:layout_constraintTop_toTopOf="parent" />
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>