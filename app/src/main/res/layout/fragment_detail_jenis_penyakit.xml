<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:clickable="true"
    tools:context=".ui.jenispenyakit.DetailJenisPenyakitFragment">

    <TextView
        android:id="@+id/tv_namaJenisPenyakitDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="-tidak ada data-"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/visvy_bold"
        android:textColor="@color/secondary"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_namaJenisPenyakitDetail"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="-40dp"
        android:layout_marginRight="240dp"
        app:cardBackgroundColor="@color/secondary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Deskripsi"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/sv_1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/cv_1"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/tv_deskripsiPenyakitDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-tidak ada data-"
            android:textAlignment="viewStart"
            android:textSize="14dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/nunitto_semibold"
            android:textColor="@color/secondary"/>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/sv_1"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="-40dp"
        android:layout_marginRight="240dp"
        app:cardBackgroundColor="@color/secondary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Penanganan"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/white"
            tools:ignore="RtlCompat" />
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:id="@+id/sv_2"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/cv_2"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/tv_pengobatanPenyakitDetail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-tidak ada data-"
            android:textAlignment="viewStart"
            android:textSize="14dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/nunitto_semibold"
            android:textColor="@color/secondary"/>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>