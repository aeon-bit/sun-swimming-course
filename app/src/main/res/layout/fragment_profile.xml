<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:clickable="true"
    tools:context=".ui.bookingjadwal.BookingJadwalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_contentProfile"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="100"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="6dp"
            android:orientation="horizontal">

<!--            LEFT-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_account"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama Pengguna"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nomor Hp"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <!--            RIGHT-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:orientation="vertical">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginLeft="20dp"/>
                <TextView
                    android:id="@+id/tv_namaPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:id="@+id/tv_alamatPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/tv_noHpPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/tv_emailPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/tv_userPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
                <TextView
                    android:id="@+id/tv_passPengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=": *****"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/text"
                    android:textSize="14dp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_btnPerformLogout"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="46dp"
        android:clickable="true"
        android:elevation="12dp"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/warining"
        app:cardCornerRadius="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_contentProfile">

        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:text="Logout"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>