<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:clickable="true"
    tools:context=".ui.artikel.DetailArtikel">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="24dp"
                    android:clipToPadding="false"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="12dp">
                    <ImageView
                        android:id="@+id/iv_gambarDetailArtikel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_nopic"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_JudulDetailArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/visvy_bold"
                    android:textColor="@color/secondary"
                    android:lineSpacingExtra="4dp"
                    android:textSize="22dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:id="@+id/tv_deskripsiDetailArtikel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitto_semibold"
                    android:textColor="@color/secondary"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginTop="24dp"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    app:layout_constraintTop_toBottomOf="@id/ly_warning"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>