<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/xmlbg_confirm"
        android:elevation="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu Jadwal"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/secondary"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            app:layout_constraintTop_toBottomOf="@id/titleDialog"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp">
            <LinearLayout
                android:id="@+id/ly_btnPesanJadwalDialog"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/xmlbg_btn_confirm_dialog_primary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Pesan Jadwal"
                    android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ly_btnLihatJadwalDialog"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/xmlbg_btn_confirm_dialog_primary"
                app:layout_constraintTop_toBottomOf="@id/ly_btnPesanJadwalDialog"
                android:layout_marginTop="16dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Lihat Jadwal"
                    android:textColor="@color/white" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ly_btnCloseDialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/xmlbg_btn_cancel_dialog"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:layout_marginHorizontal="74dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:textAlignment="center"
                android:text="Tutup"
                android:textColor="@color/text" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>