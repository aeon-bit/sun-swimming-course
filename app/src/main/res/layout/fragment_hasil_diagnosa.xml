<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bg"
    android:clickable="true"
    tools:context=".ui.jadwallatihan.HasilDiagnosaFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Nama Kucing"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/tv_namaKucingHasilD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/xmlbg_input_outline"
                        android:ellipsize="end"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/secondary"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Jenis Kucing"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/tv_jenisKucingHasilD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/xmlbg_input_outline"
                        android:ellipsize="end"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/secondary"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:text="Nama Pemilik"
                        android:textColor="@color/secondary" />

                    <TextView
                        android:id="@+id/tv_namaPemilikHasilD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="60"
                        android:background="@drawable/xmlbg_input_outline"
                        android:ellipsize="end"
                        android:focusableInTouchMode="false"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingHorizontal="12dp"
                        android:textColor="@color/secondary"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_1"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="180dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/c1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:text="Gejala yang diderita"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_gejalaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/cv_1"
                tools:listitem="@layout/item_list_gejala_detail" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_2"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="180dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/rv_gejalaDetail">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:text="Kesimpulan Diagnosa"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_hasilDiagnosaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/cv_2" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_3"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="-36dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="180dp"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/rv_hasilDiagnosaDetail">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="32dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center_vertical"
                    android:text="Saran Pengobatan"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    tools:ignore="RtlCompat" />
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_saranDiagnosaDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:paddingHorizontal="12dp"
                app:layout_constraintTop_toBottomOf="@id/cv_3" />

            <LinearLayout
                android:id="@+id/ly_warning"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/xmlbg_warning_diagnosa"
                android:padding="12dp"
                android:weightSum="100"
                app:layout_constraintTop_toBottomOf="@id/rv_saranDiagnosaDetail">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="14"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/warining" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="80"
                    android:fontFamily="@font/nunitto_semibold"

                    android:textColor="@color/warining"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/sv_2" />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/fl_bot"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/ly_warning"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_btnPerformChatDokter"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginTop="46dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/fl_bot">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Chat dokter"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_btnPerformBooking"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginTop="46dp"
                android:clickable="true"
                android:elevation="12dp"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/secondary"
                app:cardCornerRadius="18dp"
                android:layout_marginRight="12dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fl_bot">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Booking Jadwal"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                app:layout_constraintTop_toBottomOf="@id/cv_btnPerformChatDokter"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>